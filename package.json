{
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web",
    "eject": "expo eject",
    "commit": "git-cz",
    "lint": "eslint .",
    "styleguide:build": "...",
    "prettier:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,mdx}'",
    "validate": "run-s test lint prettier:check",
    "prerelease": "git checkout master && git pull origin master && npm i && run-s validate styleguide:build && git-authors-cli && git add .",
    "release": "standard-version",
    "postrelease": "run-s release:*",
    "release:tags": "git push --follow-tags origin master",
    "release:github": "conventional-github-releaser -p angular",
    "ci:validate": "rm -rf node_modules && npm ci && npm run validate",
    "prepublishOnly": "npm run ci:validate && npm run build",
    "start:cli": "node node_modules/react-native/local-cli/cli.js start"
  },
  "dependencies": {
    "@expo/react-native-action-sheet": "^2.1.0",
    "@expo/samples": "2.1.1",
    "@expo/vector-icons": "^10.0.1",
    "expo": "^33.0.0",
    "expo-asset": "^5.0.1",
    "expo-font": "^5.0.1",
    "klank": "^0.0.5",
    "react": "16.8.3",
    "react-dom": "^16.8.6",
    "react-native": "https://github.com/expo/react-native/archive/sdk-33.0.0.tar.gz",
    "react-native-gesture-handler": "^1.3.0",
    "react-native-paper": "^2.15.2",
    "react-native-web": "^0.11.4",
    "react-navigation": "^3.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.5.0",
    "@babel/runtime": "^7.5.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/travis-cli": "^8.1.0",
    "@octokit/rest": "^16.16.0",
    "@storybook/addon-actions": "^5.1.3",
    "@storybook/addon-knobs": "^5.1.3",
    "@storybook/addon-options": "^5.1.3",
    "@storybook/addon-viewport": "^5.1.3",
    "@storybook/react": "^5.1.3",
    "@types/expo": "^32.0.13",
    "@types/expo__vector-icons": "^9.0.1",
    "@types/jest": "^24.0.0",
    "@types/react": "^16.8.19",
    "@types/react-native": "^0.57.34",
    "@types/react-navigation": "^3.0.1",
    "@types/react-test-renderer": "^16.8.1",
    "@types/storybook__addon-actions": "^3.4.3",
    "@types/storybook__addon-knobs": "^5.0.1",
    "@types/storybook__react": "^4.0.2",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "babel-jest": "^24.1.0",
    "babel-loader": "^8.0.6",
    "babel-preset-expo": "^5.1.1",
    "cache-loader": "^2.0.1",
    "commitizen": "^4.0.3",
    "cz-adapter-eslint": "^0.3.0",
    "eslint": "^5.13.0",
    "eslint-config-prettier": "^4.0.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-react": "^7.12.4",
    "eslint-plugin-typescript": "^0.14.0",
    "fork-ts-checker-webpack-plugin": "^1.0.0",
    "husky": "^3.0.2",
    "jest-expo": "^33.0.2",
    "lint-staged": "^9.2.1",
    "metro-react-native-babel-preset": "^0.52.0",
    "node-fetch": "^2.3.0",
    "now": "^15.8.7",
    "prettier": "^1.16.4",
    "react-addons-test-utils": "^15.6.2",
    "react-native-typescript-transformer": "^1.2.13",
    "react-art": "16.8.3",
    "react-dom": "16.8.3",
    "react-native-elements": "^1.1.0",
    "react-native-vector-icons": "^6.5.0",
    "react-native-web": "^0.10.0",
    "react-test-renderer": "^16.8.3",
    "scaffdog": "^0.0.7",
    "standard-version": "^7.0.0",
    "thread-loader": "^2.1.2",
    "ts-loader": "^5.3.3",
    "typescript": "^3.3.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(js)$": "<rootDir>/node_modules/babel-jest",
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "testPathIgnorePatterns": [
      "\\.snap$",
      "<rootDir>/node_modules/"
    ],
    "cacheDirectory": ".jest/cache"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.mdx": [
      "prettier --write",
      "git add"
    ],
    "src/**/*.{js,jsx,css,less,scss,ts,tsx,md}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  }
}
